{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "outDir": "./dist",
        "composite": true,
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@util/*": ["Electron/util/*"],
            "@shared/*": ["common/*"],
            "@common/*": ["Electron/packages/*"]
        }
    },
    "include": ["Electron/**/*.ts", "common/*.ts"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
